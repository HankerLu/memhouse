<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="usermotto">
      <text class="user-motto">{{motto}}</text>
    </view>
    <view class="photo-upload">
      <button bindtap="chooseImage">选择照片</button>
      <view class="image-preview" wx:if="{{tempImagePath}}" bindtap="previewImage">
        <image src="{{tempImagePath}}" mode="aspectFit"></image>
      </view>
    </view>
    <button class="ai-poetry-btn" bindtap="goToAIPoetry">AI写诗</button>
  </view>
</scroll-view>
