<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="usermotto">
      <text class="user-motto">{{motto}}</text>
    </view>
    <view class="photo-upload">
      <view class="image-preview" wx:if="{{tempImagePath}}" bindtap="previewImage">
        <image src="{{tempImagePath}}" mode="aspectFit"></image>
      </view>
      <button bindtap="chooseImage" loading="{{analyzing}}">
        {{analyzing ? '分析中...' : '选择照片'}}
      </button>
      <view class="keywords" wx:if="{{keywords.length > 0}}">
        <text class="keyword {{item.selected ? 'selected' : ''}}" 
              wx:for="{{keywords}}" 
              wx:key="index"
              bindtap="toggleKeyword"
              data-index="{{index}}">
          {{item.text}}
        </text>
      </view>
    </view>
    <button class="ai-poetry-btn" bindtap="goToAIPoetry">AI写诗</button>
  </view>
</scroll-view>
