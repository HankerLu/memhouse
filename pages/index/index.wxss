/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.usermotto {
  margin-top: 100px;
  margin-bottom: 50px;
  text-align: center;
}

.container {
  padding: 20px;
}

.photo-upload {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-preview {
  margin-top: 20px;
  width: 100%;
}

.image-preview image {
  width: 100%;
  height: 300px;
}

button {
  margin-top: 20px;
  background-color: #07c160;
  color: white;
}

.ai-poetry-btn {
  margin: 20px;
  background-color: #07c160;
  color: white;
}
