/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.usermotto {
  margin-top: 30px;
  margin-bottom: 20px;
  text-align: center;
}

.container {
  padding: 10px;
}

.photo-upload {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-preview {
  margin-top: 10px;
  width: 100%;
}

.image-preview image {
  width: 100%;
  height: 300px;
}

button {
  margin-top: 10px;
  background-color: #07c160;
  color: white;
}

.ai-poetry-btn {
  margin: 10px;
  background-color: #07c160;
  color: white;
}

.keywords {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
}

.keyword {
  background: #e6f3ff;
  padding: 5px 10px;
  border-radius: 15px;
  font-size: 14px;
  color: #0066cc;
  transition: all 0.3s;
}

.keyword.selected {
  background: #0066cc;
  color: white;
}
