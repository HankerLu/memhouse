/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.photo-upload {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: 45vh;
  overflow-y: auto;
}

.image-preview {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 10rpx 0;
}

.keyword {
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.keyword.selected {
  background: #4CAF50;
  color: #fff;
}

.main-image-container {
  position: relative;
  width: 100%;
  height: 50vh;
  border-radius: 20rpx;
  overflow: hidden;
}

.floating-button {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  padding: 5rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.floating-buttons {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 30rpx;
  z-index: 10;
}

.circle-button {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #ffffff;
}

.circle-button text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.analyzing {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.hidden {
  display: none;
}

/* 添加动画相关样式，其他样式保持不变 */
.animation-wrapper {
  width: 100%;
  height: 100%;
}

.animation-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
