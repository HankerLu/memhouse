/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.photo-upload {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-preview {
  margin-top: 10px;
  width: 100%;
}

.image-preview image {
  width: 100%;
  height: 300px;
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  width: 100%;
  margin-top: 10px;
}

.action-btn {
  flex: 1;
  max-width: 45%;
  margin: 0;
  background-color: #07c160;
  color: white;
}

.keywords {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
}

.keyword {
  background: #e6f3ff;
  padding: 5px 10px;
  border-radius: 15px;
  font-size: 14px;
  color: #0066cc;
  transition: all 0.3s;
}

.keyword.selected {
  background: #0066cc;
  color: white;
}

.animation-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.main-image-container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.animation-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.floating-button {
  position: relative;
  transform: none;
}

.floating-buttons {
  position: absolute;
  top: 5%;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 40rpx;
  z-index: 100;
}

.circle-button {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  animation: pulse 2s infinite;
}

.circle-button text {
  font-size: 24rpx;
  color: #07c160;
  text-align: center;
  padding: 10rpx;
}

.analyzing .circle-button {
  animation: spin 1s infinite linear;
}

.poetry-button .circle-button {
  background: rgba(7, 193, 96, 0.9);
}

.poetry-button .circle-button text {
  color: white;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
