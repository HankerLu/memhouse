/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.photo-upload {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-preview {
  margin-top: 10px;
  width: 100%;
}

.image-preview image {
  width: 100%;
  height: 300px;
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  width: 100%;
  margin-top: 10px;
}

.action-btn {
  flex: 1;
  max-width: 45%;
  margin: 0;
  background-color: #07c160;
  color: white;
}

.keywords {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
}

.keyword {
  background: #e6f3ff;
  padding: 5px 10px;
  border-radius: 15px;
  font-size: 14px;
  color: #0066cc;
  transition: all 0.3s;
}

.keyword.selected {
  background: #0066cc;
  color: white;
}

.animation-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
